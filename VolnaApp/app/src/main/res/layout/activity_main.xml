<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="70dp"
                android:contentDescription="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@null" />

                    <RelativeLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:src="@drawable/c1b660b1e078116a3254054b2f641e44"
                            app:riv_corner_radius="15dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="155dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/main_poster_1"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/main_poster_1_2"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:src="@drawable/a1rejfghjvghjfv"
                            app:riv_corner_radius="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="155dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/main_poster_2"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/main_poster_2_2"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@null"
                            android:src="@drawable/b2ceea2edb4fd6368623ff775f71487d"
                            app:riv_corner_radius="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="155dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/main_poster_3"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/main_poster_3_2"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/comedy"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp" />

                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>
                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>
                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>


                </LinearLayout>

            </HorizontalScrollView>



            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/family"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>
                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>
                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>
                    <com.makeramen.roundedimageview.RoundedImageView

                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:src="@drawable/orig"
                        app:riv_corner_radius="15dp"
                        android:layout_marginHorizontal="10dp"/>


                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/panel"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/main_but" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/main_b"
                android:textColor="@color/panel_word"
                android:textSize="15sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:onClick="to_cinema"
                android:src="@drawable/kino_but" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/kino_b"
                android:textColor="@color/panel_word"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/ser_but" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/ser_b"
                android:textColor="@color/panel_word"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/bm_but" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/bm_b"
                android:textColor="@color/panel_word"
                android:textSize="15sp" />

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

